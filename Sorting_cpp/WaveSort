#include <bits/stdc++.h>
using namespace std;
void waveSort(int arr[],int n)
{
    sort(arr,arr+n);
    for(int i=0;i<n-1;i+=2)
    {
        int temp=arr[i];
        arr[i]=arr[i+1];
        arr[i+1]=temp;
    }
}
int main()
{
    int n;
    cout<<"Enter the length of the array:";
    cin>>n;
    int arr[n];
    cout<<"Enter the array:";
    for(int i=0;i<n;i++)
    cin>>arr[i];
    waveSort(arr,n);
    for(int i=0;i<n;i++)
    cout<<arr[i]<<" ";
    return 0;
}
